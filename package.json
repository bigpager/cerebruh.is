{
  "name": "cerebruh",
  "version": "0.1.0",
  "scripts": {
    "start": "concurrently \"npm:start:*\"",
    "start:blocko": "cd io/blocko && npm start",
    "start:mcp": "cd io/mcp && npm start",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:blocko": "cd io/blocko && npm run dev",
    "dev:mcp": "cd io/mcp && npm run dev",
    "test": "jest",
    "build": "npm run build:blocko && npm run build:mcp",
    "build:blocko": "cd io/blocko && npm run build",
    "build:mcp": "cd io/mcp && npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}