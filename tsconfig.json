{
"ts-node": {
"esm": true,
"experimentalSpecifierResolution": "node"
},
"compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "node16",
    "lib": ["es2022"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
    "@/*": ["src/*"]
    },
    "types": ["node"]
},
"include": ["src/**/*"],
"exclude": ["node_modules", "dist"]
}
